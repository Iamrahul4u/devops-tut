pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage("init"){
            steps{
                script{
                    sh 'cd java-maven-app-jenkins-jobs'
                    sh 'ls -a'
                }
            }
        }
        stage("build image") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub', passwordVariable: 'Pass', usernameVariable: 'User')]) {
                        sh 'ls'
                    }
                }
            }
        }
    }
}
