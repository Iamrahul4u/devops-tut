#!/usr/bin/env groovy
def gv
pipeline {
    agent none
    parameters {
        choice(name: 'Version', choices: ['1.0.0', '1.0.1', '1.0.2'], description: "Select a choice")
        booleanParam(name: 'executeTests', defaultValue: true, description: "")
    }
    stages {
        stage('build') {
            steps {
                script {
                    gv.buildApp();
                }
            }
        }
        stage('test') {
            when {
                expression {
                    params.executeTests
                }
            }
            steps {
                script {
                    echo "Testing the application..."
                }
            }
        }
        stage('deploy') {
            environment {
                USERNAME = credentials("nexus-data")
            }
            steps {
                script {
                    gv.testApp()
                }
            }
        }
    }
}
